.page-header
  %h1 What consoles do you own?
  %h4= link_to 'Create Console', new_console_path
.row-fluid
  %ul.thumbnails
    - @consoles.each do |console|
      %li.span3
        .thumbnail.text-center
          = cover_img(console)
          .caption
            %h4.title= link_to console.title, console
            .btn-group
              = render partial: 'add_remove_btn', :locals => { :console => console }
