%p#notice= notice

.row
  .span3.item
    %h1.page-header= @console.title
    %p= cover_img(@console, edit: true)
    .btn-group
      -if @own_console
        = link_to 'Remove', remove_console_path(@console), class: 'btn btn-danger'
      - else
        = link_to 'Add', add_console_path(@console), class: 'btn btn-success'
    .btn-group
      = link_to 'Edit', edit_console_path(@console), class: 'btn btn-default'
      = link_to 'Delete', @console, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'

  .span9.info
    %h2 Friends playing this console:
    .well