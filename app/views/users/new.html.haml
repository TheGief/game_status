= render :partial => 'shared/form_errors', :locals => {:obj => @user}  if @user.errors.any?

= form_for @user, :html => {:class => "form-horizontal"} do |f|
  %fieldset
    %legend Register
    
    .control-group
      %label.control-label{:for => 'username'} Username
      .controls
        .input-prepend
          %span.add-on
            %i.icon-user
          = f.text_field :username, {:class => 'input-large'}
    
    .control-group
      %label.control-label{:for => 'email'} E-Mail
      .controls
        .input-prepend
          %span.add-on
            %i.icon-envelope
          = f.text_field :email, {:class => 'input-large'}

    .control-group
      %label.control-label{:for => 'phone'} SMS Phone
      .controls
        .input-prepend
          %span.add-on
            %i.icon-signal
          = f.text_field :phone, {:class => 'input-large'}

      .control-group
      %label.control-label{:for => 'password'} Password
      .controls
        .input-prepend
          %span.add-on
            %i.icon-lock
          = f.password_field :password, {:class => 'input-large'}

    .actions  
      = f.submit :class => 'btn btn-primary'