%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Game Time", root_path, class: "brand"
      %a{:class => "btn btn-navbar", "data-toggle" => "collapse", "data-target" => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %nav.nav-collapse
        %ul.nav.pull-right
          - if logged_in?
            %li= link_to "Games", games_path
            %li= link_to "Consoles", consoles_path
            %li= link_to "Friends", friends_path
            %li= link_to "Account", user_path(current_user)
            %li= link_to "#{current_user.username} #{current_user.id} (Logout)", logout_path
          - else
            %li= link_to "Login", login_path
