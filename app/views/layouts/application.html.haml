!!! 5
= render 'layouts/shim'

%html
  %head

    %title= "Gamestat.us " + controller.controller_name.capitalize

    %meta{:charset => 'utf-8'}
    = csrf_meta_tags
    = stylesheet_link_tag    :application, media: "all"
    = javascript_include_tag 'http://js.pusher.com/2.0/pusher.min.js', :application
    = render partial: 'layouts/javascript'

  %body{class: controller.controller_name}
    = render 'layouts/header'
    .container{class: controller.action_name}
      .flash
        = render 'layouts/flashes' if flash.any?
      = yield
    = render 'layouts/footer'
