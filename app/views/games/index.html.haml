.page-header
  %h1 What games do you own?
  %h4= link_to 'Create Game', new_game_path
.row-fluid
  %ul.thumbnails
    - @games.each do |game|
      %li.span2
        .thumbnail.text-center
          = link_to image_tag(img_url(game.image_url, {h: 200, w: 150, t: :square, a: :top}), class: 'cover_img'), game_path(game)
          .caption
            %h5.title= link_to game.title, game
            .btn-group
              = render partial: 'add_remove_btn', :locals => { :game => game }
              